{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "ts-node": {
    "experimentalSpecifierResolution": "node",
    "esm": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
